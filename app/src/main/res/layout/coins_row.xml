<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_90cdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/_10cdp"
    app:cardCornerRadius="@dimen/_10cdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/main"
        android:id="@+id/layout_row_coin"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:layout_marginTop="@dimen/_10cdp"
            android:layout_marginLeft="@dimen/_10cdp"
            android:layout_marginBottom="@dimen/_10cdp"
            >

            <TextView
                android:id="@+id/rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/iran"
                android:text="1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_marginTop="@dimen/_10cdp"
            android:layout_marginBottom="@dimen/_10cdp"
            >

            <ImageView
                android:id="@+id/coin_row_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/_16cdp"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:layout_margin="@dimen/_10cdp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/symbol_row_coin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="BTC/USD"
                android:fontFamily="@font/iran"
                android:textSize="@dimen/_20cdp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/name_row_coin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="bitcoin"
                android:textSize="@dimen/_15cdp"
                android:gravity="center_vertical"
                />



        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:layout_marginTop="@dimen/_10cdp"
            android:layout_marginBottom="@dimen/_10cdp"
            >

            <TextView
                android:id="@+id/price_row_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="21407.8963559943567890" />


        </RelativeLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>